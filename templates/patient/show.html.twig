{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <div class="main-content d-flex justify-content-between flex-wrap">
        <h2 class="page-title">Patient</h2>
        <div class="d-flex align-items-center flex-wrap text-nowrap">
            <a href="{{ path('app_patient_edit', {'id': patient.id}) }}" class="btn btn-primary me-1 mb-1 mb-md-0">
              Edit
            </a>
            {{ include('patient/_delete_form.html.twig') }}            
            <a href="{{ path('app_patient_index') }}" class="btn btn-secondary me-1 mb-1 mb-md-0">
                Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
          <div class="card rounded">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                                                        <tr>
                                <th>Id</th>
                                <td>{{ patient.id }}</td>
                            </tr>
                                                        <tr>
                                <th>FirstName</th>
                                <td>{{ patient.firstName }}</td>
                            </tr>
                                                        <tr>
                                <th>MiddleName</th>
                                <td>{{ patient.middleName }}</td>
                            </tr>
                                                        <tr>
                                <th>LastName</th>
                                <td>{{ patient.lastName }}</td>
                            </tr>
                                                        <tr>
                                <th>Dob</th>
                                <td>{{ patient.dob ? patient.dob|date('Y-m-d') : '' }}</td>
                            </tr>
                                                        <tr>
                                <th>Gender</th>
                                <td>{{ patient.gender }}</td>
                            </tr>
                                                        <tr>
                                <th>Email</th>
                                <td>{{ patient.email }}</td>
                            </tr>
                                                        <tr>
                                <th>CellPhone</th>
                                <td>{{ patient.cellPhone }}</td>
                            </tr>
                                                        <tr>
                                <th>ResponsibleParty</th>
                                <td>{{ patient.responsibleParty }}</td>
                            </tr>
                                                        <tr>
                                <th>PrimaryDentist</th>
                                <td>{{ patient.primaryDentist }}</td>
                            </tr>
                                                        <tr>
                                <th>FeeSchedule</th>
                                <td>{{ patient.feeSchedule }}</td>
                            </tr>
                                                        <tr>
                                <th>PreferredClinic</th>
                                <td>{{ patient.preferredClinic }}</td>
                            </tr>
                                                        <tr>
                                <th>CreatedBy</th>
                                <td>{{ patient.createdBy }}</td>
                            </tr>
                                                        <tr>
                                <th>UpdatedBy</th>
                                <td>{{ patient.updatedBy }}</td>
                            </tr>
                                                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

   
{% endblock %}
